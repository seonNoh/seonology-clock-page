{
  "manifest_version": 3,
  "name": "Seonology Bookmark Sync",
  "version": "1.0.0",
  "description": "Chrome 즐겨찾기를 Seonology Clock Page에 실시간 동기화",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://clock.seonology.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://clock.seonology.com/*", "http://localhost:5173/*"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
